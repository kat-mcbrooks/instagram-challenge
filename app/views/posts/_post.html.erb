<div id="<%= dom_id post %>">
  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <% if post.image.attached? %>
  <strong>Image:</strong>
      <%= image_tag post.image %>
  <% end %>
  
  <% if post.images.attached? %>
    <strong>Images:</strong>
    <% post.images.each do |image| %>
      <%= image_tag image.variant(:medium) %>
    <% end %>
  <% end %>

</div>
